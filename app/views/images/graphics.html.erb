<div class="gallery">
  <div class="row">
    <% @graphics.each do |g| %>
      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
        <div class="thumbnail">
          <a href="<%= g.url %>" target="_blank">
            <%= image_tag "#{g.url}", width: "cover"; %>
              <div class="caption">
                  <%= g.caption %>
              </div>
          </a>
        </div>
      </div>
    <% end %>
  </div>
  <ul class="list-inline">
    <li><%= link_to "Back", images_path, class: "btn-large" %></li>
    <li><%= link_to "Home", home_path, class: "btn-large" %></li>
  </ul>
</div>
