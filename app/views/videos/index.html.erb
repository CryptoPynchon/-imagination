<div class="content">
  <div class="cards-container">
    <div class="row odd" id="video-essays">
      <h4 style="color:#fefcff">essays 🧚‍♀️</h4>
      <% @video_essays.each do |vid| %>
          <div class="col-xs-12 col-sm-4 col-md-4 col-lg-3">
              <a href="<%= video_path(vid) %>" class="vid-card" style="background-image: url(<%= image_path vid.thumbnail, style: "width: cover;"%>);">
              </a>
            <a href="<%= video_path(vid) %>"><p><%= vid.title %></p></a>
          </div>
      <% end %>
    </div>
    <div class="row even" id="performance">
      <h4 style="color:#fefcff">performances 🌈</h4>
      <% @performance.each do |vid| %>
          <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
            <a class="vid-card" href="<%= video_path(vid) %>" style="background-image: url(<%= image_path vid.thumbnail, style: "width: 100%;"%>)">
            </a>
              <a href="<%= video_path(vid) %>"><p><%= vid.title %></p></a>
          </div>
      <% end %>
    </div>
    <div class="row odd" id="time-sculptures">
      <h4 style="color:#fefcff">time sculptures 🌷</h4>
      <% @time_sculptures.each do |vid| %>
