<div class="content">
  <div class="cards-container">
    <div class="row" id="video-essays">
      <h4 style="color:#fefcff">essays</h4>
      <% @video_essays.each do |vid| %>
          <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
              <a href="<%= video_path(vid) %>" class="vid-card" style="background-image: url(<%= image_path vid.thumbnail, style: "width: 100%;"%>);">
              </a>
            <p><%= vid.title %></p>
          </div>
      <% end %>
    </div>
    <div class="row" id="shitposts">
      <h4 style="color:#fefcff">shitposts</h4>
      <% @shitposts.each do |vid| %>
          <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
              <a href="<%= video_path(vid) %>" class="vid-card" style="background-image: url(<%= image_path vid.thumbnail, style: "width: 100%;"%>);">
              </a>
            <p><%= vid.title %></p>
          </div>
      <% end %>
    </div>
    <div class="row" id="time-sculptures">
      <h4 style="color:#fefcff">time sculptures</h4>
      <% @time_sculptures.each do |vid| %>
          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
              <a href="<%= video_path(vid) %>" class="vid-card" style="background-image: url(<%= image_path vid.thumbnail, style: "width: 100%;"%>);">
              </a>
            <p><%= vid.title %></p>
          </div>
      <% end %>
    </div>
  </div>
</div>
