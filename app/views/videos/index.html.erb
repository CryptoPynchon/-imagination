              <a href="<%= video_path(vid) %>" class="vid-card" style="background-image: url(<%= image_path vid.thumbnail, style: "width: 100%;"%>);">
              </a>
            <a href="<%= video_path(vid) %>"><p><%= vid.title %></p></a>
          </div>
      <% end %>
    </div>
    <div class="row even" id="shitposts">
      <h4 style="color:#fefcff">shitposts 💯</h4>
      <% @shitposts.each do |vid| %>
          <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
            <a class="vid-card" href="<%= video_path(vid) %>" style="background-image: url(<%= image_path vid.thumbnail, style: "width: 100%;"%>)">
            </a>
              <a href="<%= video_path(vid) %>"><p><%= vid.title %></p></a>
          </div>
      <% end %>
    </div>
  </div>
</div>
